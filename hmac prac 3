import hmac
import hashlib

# Common message and key
message = "Welcome to TYCS."
key = "MS"

# HMAC 1 - Direct initialization
hmac1 = hmac.new(key.encode(), message.encode(), digestmod=hashlib.sha1)
message_digest1 = hmac1.digest()
print("Message Digest 1:", hmac1.name, message_digest1)

# HMAC 2 - Using update() method
hmac2 = hmac.new(key.encode(), digestmod=hashlib.sha1)
hmac2.update(bytes(message, encoding="utf-8"))
message_digest2 = hmac2.digest()
print("Message Digest 2:", hmac2.name, message_digest2)

# HMAC 3 - Dividing message into two parts
hmac3 = hmac.new(key.encode(), digestmod=hashlib.sha1)
hmac3.update(bytes("Welcome to ", encoding="utf-8"))
hmac3.update(bytes("TYCS.", encoding="utf-8"))
message_digest3 = hmac3.digest()
print("Message Digest 3:", hmac3.name, message_digest3)

# Message Digest Sizes
print("\nMessage Digest Sizes for 1, 2, and 3:",
      hmac1.digest_size, hmac2.digest_size, hmac3.digest_size)

# Message Block Sizes
print("Message Block Sizes for 1, 2, and 3:",
      hmac1.block_size, hmac2.block_size, hmac3.block_size)
